#!/usr/bin/env node

var htmlcs = require('../');
var info = require('../package.json');

var path = process.argv[2];

if (path) {
    htmlcs.hintFile(path).forEach(function (item) {
        console.log('[%s] line %d, col %d: %s', item.type, item.pos.line, item.pos.col, item.message);
    });
} else {
    console.log([
        ['htmlcs', 'v' + info.version],
        ['Usage:', 'htmlcs', '<file>']
    ].map(function (line) {
        return line.join(' ');
    }).join('\n'));
}
